<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.czyl.project.system.mapper.SysFileMapper">
    
    <resultMap type="SysFile" id="SysFileResult">
        <result property="fileId"    column="file_id"    />
        <result property="name"    column="name"    />
        <result property="contenttype"    column="contentType"    />
        <result property="isimg"    column="isImg"    />
        <result property="size"    column="size"    />
        <result property="path"    column="path"    />
        <result property="url"    column="url"    />
        <result property="source"    column="source"    />
        <result property="createBy"    column="create_by"    />
        <result property="createByCode"    column="create_by_code"    />
        <result property="createByName"    column="create_by_name"    />
        <result property="createTime"    column="create_time"    />
        <result property="srcId"    column="src_id"    />
        <result property="srcType"    column="src_type"    />
        <result property="version"    column="version"    />
        <result property="expireTime"    column="expire_time"    />
    </resultMap>

    <sql id="selectSysFileVo">
        select expire_time,file_id, name, contentType, isImg, size, path, url, source, create_by, create_by_code, create_by_name, create_time, src_id, src_type, version from sys_file
    </sql>

    <select id="selectSysFileList" parameterType="SysFile" resultMap="SysFileResult">
        <include refid="selectSysFileVo"/>
        <where>  
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
            <if test="contenttype != null  and contenttype != ''"> and contentType = #{contenttype}</if>
            <if test="isimg != null  and isimg != ''"> and isImg = #{isimg}</if>
            <if test="source != null  and source != ''"> and source = #{source}</if>
           <!--  <if test="params.beginCreateTime != null and params.beginCreateTime != '' and params.endCreateTime != null and params.endCreateTime != ''"> and create_time between #{params.beginCreateTime} and #{params.endCreateTime}</if> -->
            <if test="srcId != null "> and src_id = #{srcId}</if>
            <if test="srcType != null  and srcType != ''"> and src_type = #{srcType}</if>
        </where>
    </select>
    
    <select id="selectSysFileById" parameterType="Long" resultMap="SysFileResult">
        <include refid="selectSysFileVo"/>
        where file_id = #{fileId}
    </select>
        
    <insert id="insertSysFile" parameterType="SysFile">
        insert into sys_file
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="fileId != null ">file_id,</if>
            <if test="name != null  and name != ''">name,</if>
            <if test="contenttype != null  and contenttype != ''">contentType,</if>
            <if test="isimg != null  and isimg != ''">isImg,</if>
            <if test="size != null ">size,</if>
            <if test="path != null  and path != ''">path,</if>
            <if test="url != null  and url != ''">url,</if>
            <if test="source != null  and source != ''">source,</if>
            <if test="createBy != null ">create_by,</if>
            <if test="createByCode != null  and createByCode != ''">create_by_code,</if>
            <if test="createByName != null  and createByName != ''">create_by_name,</if>
            <if test="createTime != null ">create_time,</if>
            <if test="srcId != null ">src_id,</if>
            <if test="srcType != null  and srcType != ''">src_type,</if>
            <if test="version != null ">version,</if>
            <if test="expireTime != null ">expire_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="fileId != null ">#{fileId},</if>
            <if test="name != null  and name != ''">#{name},</if>
            <if test="contenttype != null  and contenttype != ''">#{contenttype},</if>
            <if test="isimg != null  and isimg != ''">#{isimg},</if>
            <if test="size != null ">#{size},</if>
            <if test="path != null  and path != ''">#{path},</if>
            <if test="url != null  and url != ''">#{url},</if>
            <if test="source != null  and source != ''">#{source},</if>
            <if test="createBy != null ">#{createBy},</if>
            <if test="createByCode != null  and createByCode != ''">#{createByCode},</if>
            <if test="createByName != null  and createByName != ''">#{createByName},</if>
            <if test="createTime != null ">#{createTime},</if>
            <if test="srcId != null ">#{srcId},</if>
            <if test="srcType != null  and srcType != ''">#{srcType},</if>
            <if test="version != null ">#{version},</if>
            <if test="expireTime != null ">#{expireTime},</if>
         </trim>
    </insert>

    <update id="updateSysFile" parameterType="SysFile">
        update sys_file
        <trim prefix="SET" suffixOverrides=",">
            <if test="name != null  and name != ''">name = #{name},</if>
            <if test="contenttype != null  and contenttype != ''">contentType = #{contenttype},</if>
            <if test="isimg != null  and isimg != ''">isImg = #{isimg},</if>
            <if test="size != null ">size = #{size},</if>
            <if test="path != null  and path != ''">path = #{path},</if>
            <if test="url != null  and url != ''">url = #{url},</if>
            <if test="source != null  and source != ''">source = #{source},</if>
            <if test="createBy != null ">create_by = #{createBy},</if>
            <if test="createByCode != null  and createByCode != ''">create_by_code = #{createByCode},</if>
            <if test="createByName != null  and createByName != ''">create_by_name = #{createByName},</if>
            <if test="createTime != null ">create_time = #{createTime},</if>
            <if test="srcId != null ">src_id = #{srcId},</if>
            <if test="srcType != null  and srcType != ''">src_type = #{srcType},</if>
            <if test="version != null ">version = #{version},</if>
            <if test="expireTime != null ">expire_time = #{expireTime},</if>
        </trim>
        where file_id = #{fileId}
    </update>

    <delete id="deleteSysFileById" parameterType="Long">
        delete from sys_file where file_id = #{fileId}
    </delete>

    <delete id="deleteSysFileByIds" parameterType="String">
        delete from sys_file where file_id in 
        <foreach item="fileId" collection="array" open="(" separator="," close=")">
            #{fileId}
        </foreach>
    </delete>
    
</mapper>