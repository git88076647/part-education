<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.czyl.project.system.mapper.SysWeakpasswordMapper">
    
    <resultMap type="SysWeakpassword" id="SysWeakpasswordResult">
        <result property="pwdId"    column="pwd_id"    />
        <result property="password"    column="password"    />
        <result property="status"    column="status"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="version"    column="version"    />
        <result property="createByName"    column="createByName"    />
        <result property="updateByName"    column="updateByName"    />
        <result property="dr"    column="dr"    />
    </resultMap>

    <sql id="selectSysWeakpasswordVo">
        select uc.nick_name createByName,uu.nick_name updateByName,p.pwd_id, p.password, p.status, p.create_by, p.create_time, p.update_by, p.update_time, p.version, p.dr from sys_weakpassword p
        left join sys_user uc on uc.user_id=p.create_by
        left join sys_user uu on uu.user_id=p.update_by
    </sql>

    <select id="selectSysWeakpasswordList" parameterType="SysWeakpassword" resultMap="SysWeakpasswordResult">
        <include refid="selectSysWeakpasswordVo"/>
        <where>  
        	p.dr = 0
            <if test="password != null  and password != ''"> and p.password = #{password}</if>
            <if test="status != null "> and p.status = #{status}</if>
        </where>
    </select>
    
    <select id="selectSysWeakpasswordById" parameterType="Long" resultMap="SysWeakpasswordResult">
        <include refid="selectSysWeakpasswordVo"/>
        where p.pwd_id = #{pwdId}
    </select>
    
    <select id="selectSysWeakpasswordByPassword" parameterType="String" resultMap="SysWeakpasswordResult">
        select p.pwd_id, p.password, p.status, p.create_by, p.create_time, p.update_by, p.update_time, p.version, p.dr from sys_weakpassword p
        where p.password = #{password}
    </select>
        
    <insert id="insertSysWeakpassword" parameterType="SysWeakpassword">
        insert into sys_weakpassword
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="pwdId != null ">pwd_id,</if>
            <if test="password != null  and password != ''">password,</if>
            <if test="status != null ">status,</if>
            <if test="createBy != null ">create_by,</if>
            <if test="createTime != null ">create_time,</if>
            <if test="updateBy != null ">update_by,</if>
            <if test="updateTime != null ">update_time,</if>
            <if test="version != null ">version,</if>
            <if test="dr != null ">dr,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="pwdId != null ">#{pwdId},</if>
            <if test="password != null  and password != ''">#{password},</if>
            <if test="status != null ">#{status},</if>
            <if test="createBy != null ">#{createBy},</if>
            <if test="createTime != null ">#{createTime},</if>
            <if test="updateBy != null ">#{updateBy},</if>
            <if test="updateTime != null ">#{updateTime},</if>
            <if test="version != null ">#{version},</if>
            <if test="dr != null ">#{dr},</if>
         </trim>
    </insert>
    <insert id="insertSysWeakpasswordBatch" parameterType="java.util.List">
        insert into sys_weakpassword (pwd_id,password,status,create_by,create_time,version,dr)
         values
         <foreach collection="list" item="item" index="index" separator=",">
			(
			#{item.pwdId},
			#{item.password},
			#{item.status},
			#{item.createBy},
			#{item.createTime},
			#{item.version},
			#{item.dr}
			)
	     </foreach>	
        
    </insert>

    <update id="updateSysWeakpassword" parameterType="SysWeakpassword">
        update sys_weakpassword
        <trim prefix="SET" suffixOverrides=",">
            <if test="password != null  and password != ''">password = #{password},</if>
            <if test="status != null ">status = #{status},</if>
            <if test="createBy != null ">create_by = #{createBy},</if>
            <if test="createTime != null ">create_time = #{createTime},</if>
            <if test="updateBy != null ">update_by = #{updateBy},</if>
            <if test="updateTime != null ">update_time = #{updateTime},</if>
            <if test="version != null ">version = #{version},</if>
            <if test="dr != null ">dr = #{dr},</if>
        </trim>
        where pwd_id = #{pwdId}
    </update>

    <delete id="deleteSysWeakpasswordById" parameterType="Long">
        delete from sys_weakpassword where pwd_id = #{pwdId}
    </delete>

    <delete id="deleteSysWeakpasswordByIds" parameterType="String">
        delete from sys_weakpassword where pwd_id in 
        <foreach item="pwdId" collection="array" open="(" separator="," close=")">
            #{pwdId}
        </foreach>
    </delete>
    
</mapper>