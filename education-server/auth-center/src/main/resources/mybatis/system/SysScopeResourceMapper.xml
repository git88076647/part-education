<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.czyl.project.system.mapper.SysScopeResourceMapper">
    <resultMap type="SysScopeResource" id="SysScopeResource">
        <id property="id" column="id"/>
        <result property="resourceCode" column="resource_code"/>
        <result property="scopeCode" column="scope_code"/>
        <result property="name" column="name"/>
        <result property="columnName" column="column_name"/>
        <result property="permissionSql"    column="permission_sql"/>
    </resultMap>

    <select id="getOne" resultMap="SysScopeResource">
        select * from sys_scope_resource
        <where>
            1=1
            <if test="id != null ">and id=#{id}</if>
            <if test="resourceCode != null and resourceCode != ''">and resource_code=#{resourceCode}</if>
            <if test="scopeCode != null and scopeCode != ''">and scope_code=#{scopeCode}</if>
            <if test="name != null and name != ''">and name=#{name}</if>
            <if test="columnName != null and columnName != ''">and column_name=#{columnName}</if>
        </where>
    </select>
    <select id="list" resultMap="SysScopeResource">
        select * from sys_scope_resource
    </select>
</mapper>
