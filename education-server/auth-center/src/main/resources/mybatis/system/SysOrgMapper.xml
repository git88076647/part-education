<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.czyl.project.system.mapper.SysOrgMapper">

	<resultMap type="SysOrg" id="SysOrgResult">
		<id     property="orgId"     column="org_id"     />
		<result property="parentId"   column="parent_id"   />
		<result property="orgCode"   column="org_code"   />
		<result property="orgName"   column="org_name"   />
		<result property="orgShortName"   column="org_short_name"   />
		<result property="creditCode"   column="credit_code"   />
		<result property="address"   column="address"   />
		<result property="orderNum"   column="order_num"   />
		<result property="leader"     column="leader"      />
		<result property="phone"      column="phone"       />
		<result property="email"      column="email"       />
		<result property="status"     column="status"      />
		<result property="dr"    column="dr"    />
		<result property="parentName" column="parent_name" />
		<result property="createBy"   column="create_by"   />
		<result property="createTime" column="create_time" />
		<result property="updateBy"   column="update_by"   />
		<result property="updateTime" column="update_time" />
		<result property="version" column="version" />
	</resultMap>
	
	<sql id="selectOrgVo">
        select org.version,org.org_short_name,org.credit_code,org.address,org.org_id, org.parent_id,org.org_code, org.org_name, org.order_num, org.leader, org.phone, org.email, org.status, org.dr, org.create_by, org.create_time 
        from sys_org org
    </sql>
    
	<select id="selectOrgList" parameterType="SysOrg" resultMap="SysOrgResult">
        <include refid="selectOrgVo"/>
        where org.dr = 0
        <if test="parentId != null and parentId != 0">
			AND parent_id = #{parentId}
		</if>
		<if test="orgCode != null and orgCode != ''">
			AND org_code like concat('%', #{orgCode}, '%')
		</if>
		<if test="orgName != null and orgName != ''">
			AND org_name like concat('%', #{orgName}, '%')
		</if>
		<if test="status != null and status != ''">
			AND status = #{status}
		</if>
		<!-- 数据范围过滤 -->
		${dataScope}
		order by org.parent_id, org.order_num
    </select>
    
    <select id="selectOrgListByRoleId" parameterType="Long" resultType="String">
		select org.org_id,org.parent_id
		from sys_org org
        join sys_role_org rd on org.org_id = rd.org_id
        where rd.role_id = #{roleId}
        and not exists (select t.parent_id from sys_org t inner join sys_role_org rd ON t.org_id = rd.org_id where t.parent_id=org.org_id and rd.role_id = #{roleId}) 
		order by org.parent_id, org.order_num
	</select>
    
    <select id="selectOrgById" parameterType="Long" resultMap="SysOrgResult">
		<include refid="selectOrgVo"/>
		where org_id = #{orgId}
	</select>
    
    <select id="checkOrgExistUser" parameterType="Long" resultType="int">
		select count(1) from sys_user where org_id = #{orgId} and dr = 0
	</select>
	
	<select id="hasChildByOrgId" parameterType="Long" resultType="int">
		select count(1) from sys_org
		where dr = 0 and parent_id = #{orgId}
	</select>
	
	<select id="selectChildrenOrgById" parameterType="Long" resultMap="SysOrgResult">
		select * from sys_org where find_in_set(org_id,queryOrgParentList(#{orgId}))
	</select>
	
	<select id="checkOrgNameUnique" resultMap="SysOrgResult">
	    <include refid="selectOrgVo"/>
		where org_name=#{orgName} and dr=0
	</select>
	
	<select id="checkOrgCodeUnique" resultMap="SysOrgResult">
	    <include refid="selectOrgVo"/>
		where org_code=#{orgCode} and dr=0
	</select>
    
    <insert id="insertOrg" parameterType="SysOrg">
 		insert into sys_org(
 			<if test="orgId != null ">org_id,</if>
 			<if test="parentId != null and parentId != 0">parent_id,</if>
 			<if test="orgCode != null and orgCode != ''">org_code,</if>
 			<if test="orgName != null and orgName != ''">org_name,</if>
 			<if test="orgShortName != null ">org_short_name,</if>
 			<if test="creditCode != null ">credit_code,</if>
 			<if test="address != null">address,</if>
 			<if test="orderNum != null and orderNum != ''">order_num,</if>
 			<if test="leader != null ">leader,</if>
 			<if test="phone != null ">phone,</if>
 			<if test="email != null ">email,</if>
 			<if test="status != null">status,</if>
 			<if test="version != null">version,</if>
 			<if test="createBy != null ">create_by,</if>
 			create_time
 		)values(
 			<if test="orgId != null ">#{orgId},</if>
 			<if test="parentId != null and parentId != 0">#{parentId},</if>
 			<if test="orgCode != null and orgCode != ''">#{orgCode},</if>
 			<if test="orgName != null and orgName != ''">#{orgName},</if>
 			<if test="orgShortName != null ">#{orgShortName},</if>
 			<if test="creditCode != null ">#{creditCode},</if>
 			<if test="address != null">#{address},</if>
 			<if test="orderNum != null and orderNum != ''">#{orderNum},</if>
 			<if test="leader != null ">#{leader},</if>
 			<if test="phone != null ">#{phone},</if>
 			<if test="email != null ">#{email},</if>
 			<if test="status != null">#{status},</if>
 			<if test="version != null">#{version},</if>
 			<if test="createBy != null ">#{createBy},</if>
 			sysdate()
 		)
	</insert>
	
	<update id="updateOrg" parameterType="SysOrg">
 		update sys_org
 		<set>
 			<if test="parentId != null and parentId != 0">parent_id = #{parentId},</if>
 			<if test="orgCode != null and orgCode != ''">org_code = #{orgCode},</if>
 			<if test="orgName != null and orgName != ''">org_name = #{orgName},</if>
 			<if test="orgShortName != null ">org_short_name = #{orgShortName},</if>
 			<if test="creditCode != null ">credit_code = #{creditCode},</if>
 			<if test="address != null ">address = #{address},</if>
 			<if test="orderNum != null and orderNum != ''">order_num = #{orderNum},</if>
 			<if test="leader != null">leader = #{leader},</if>
 			<if test="phone != null">phone = #{phone},</if>
 			<if test="email != null">email = #{email},</if>
 			<if test="version != null">version = #{version},</if>
 			<if test="status != null and status != ''">status = #{status},</if>
 			<if test="updateBy != null ">update_by = #{updateBy},</if>
 			update_time = sysdate()
 		</set>
 		where org_id = #{orgId}
	</update>
	 
	 <update id="updateOrgStatus" parameterType="SysOrg">
 	    update sys_org
 	    <set>
 	    	version = version +1,
 	        <if test="status != null and status != ''">status = #{status},</if>
 	        <if test="updateBy != null and updateBy != ''">update_by = #{updateBy},</if>
 	        update_time = sysdate()
        </set>
 	    where find_in_set(org_id,queryOrgParentList(#{orgId}))
	</update>
	
	<delete id="deleteOrgById" parameterType="Long">
		update sys_org set dr = 1 where org_id = #{orgId}
	</delete>

</mapper> 