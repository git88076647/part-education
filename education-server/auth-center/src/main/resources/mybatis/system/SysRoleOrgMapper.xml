<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.czyl.project.system.mapper.SysRoleOrgMapper">

	<resultMap type="SysRoleOrg" id="SysRoleOrgResult">
		<result property="roleId"     column="role_id"      />
		<result property="orgId"     column="org_id"      />
	</resultMap>
	
	<select id="checkOrgExistRole" resultType="Integer">
	    select count(1) from sys_role_org where org_id = #{orgId}  
	</select>

	<delete id="deleteRoleOrgByRoleId" parameterType="Long">
		delete from sys_role_org where role_id=#{roleId}
	</delete>
	
	<insert id="batchRoleOrg">
		insert into sys_role_org(role_id, org_id) values
		<foreach item="item" index="index" collection="list" separator=",">
			(#{item.roleId},#{item.orgId})
		</foreach>
	</insert>
	
</mapper> 